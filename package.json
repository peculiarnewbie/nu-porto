{
	"name": "nu-porto",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"format": "prettier --plugin-search-dir . --write .",
		"migrate": "tsx drizzle/migrate",
		"generate": "drizzle-kit generate:sqlite --out ./drizzle/migrations --breakpoints --schema=./drizzle/schema.ts",
		"studio": "drizzle-kit studio --port 3333",
		"push-db": "drizzle-kit push:sqlite",
		"drop-migrations": "drizzle-kit drop",
		"introspect-db": "drizzle-kit introspect:sqlite"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^2.1.1",
		"@sveltejs/kit": "^1.27.6",
		"autoprefixer": "^10.4.16",
		"dotenv": "^16.3.1",
		"drizzle-kit": "^0.20.2",
		"postcss": "^8.4.31",
		"prettier": "^3.1.0",
		"prettier-plugin-svelte": "^3.1.0",
		"prettier-plugin-tailwindcss": "^0.5.7",
		"svelte": "^4.2.3",
		"svelte-check": "^3.6.0",
		"tailwindcss": "^3.3.5",
		"tsx": "^4.1.2",
		"typescript": "^5.2.2",
		"vite": "^4.5.0"
	},
	"type": "module",
	"dependencies": {
		"@libsql/client": "^0.3.6",
		"@theatre/core": "^0.7.0",
		"@theatre/studio": "^0.7.0",
		"@threlte/core": "^6.1.0",
		"@threlte/extras": "^7.5.1",
		"@threlte/theatre": "^2.1.3",
		"@types/three": "^0.158.2",
		"drizzle-orm": "^0.29.0",
		"marked": "^10.0.0",
		"three": "^0.158.0",
		"uuid": "^9.0.1"
	}
}
